{% extends 'layouts/ejemplo.html.twig' %}

{% block titulo %} Buscador {% endblock %}

{# {% block cabecera %} {{parent()}} <h1>formulario</h1> {% endblock %} #}
{% block contenido %}
    {# <h1>{{ title }}</h1>
    <h2>Nombre de la serie: {{ nombre }}</h2>
    <h2>Creador: {{ creador }}</h2> #}

    {# cracion de variables #}
    {% set opcion1 = 'Stranger things' %}
    <h4>{{ opcion1 }}</h4>

    {# array #}
    {{ dump(series) }}
    {{ series[0] }}
    {#array asociativo #}
    {{ dump(serie_aso) }}

    {# condicional #}
    {% if serie_aso.nombre == 'nombre_serie0'%}
        <h3>has acertado</h3>
    {% else %}
        <h3>No has acertado</h3>
    {% endif %}

    {# bucle #}
    {% if series|length >= 0 %}
        <ul>
            {% for i in series %}
                <li>
                    {{ i }}
                </li>
            {% endfor %}
        </ul>
    {% endif %}
    <hr/>
    <h1>Funciones predefinidas</h1>
    {{min([1,3,4,5])}}<br/>
    {{max([1,22,4,555,777,0])}}<br/>
    {{random(series)}}<br/>

    {# for in#}    
    {% for i in range(0, 100, 5) %}
        {{i}} <br/>
    {% endfor %}
    {# filtros#}
    <hr/>
    <h1>Filtros</h1>
    {{series|length}}

    {% set email = 'email@email.com      ' %}
    {{ dump(email|trim|upper|lower) }}

{% endblock %}